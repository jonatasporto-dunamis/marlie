{
  "name": "@marlie/quality-module",
  "version": "1.0.0",
  "description": "MÃ³dulo de qualidade e testes para o sistema Marlie - Testes E2E, contratos, seeds e pipeline CI/CD",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "seed:load": "ts-node scripts/load-seeds.ts",
    "seed:reset": "ts-node scripts/reset-seeds.ts",
    "e2e:run": "ts-node scripts/run-e2e.ts",
    "contract:test": "ts-node scripts/test-contracts.ts",
    "pipeline:run": "ts-node scripts/run-pipeline.ts",
    "health:check": "ts-node scripts/health-check.ts"
  },
  "keywords": [
    "marlie",
    "quality",
    "testing",
    "e2e",
    "contract-testing",
    "ci-cd",
    "seeds",
    "staging",
    "saas",
    "multi-tenant"
  ],
  "author": "SyncBelle Dev <dev@syncbelle.com>",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "ioredis": "^5.3.0",
    "pg": "^8.11.0",
    "yaml": "^2.3.0",
    "joi": "^17.11.0",
    "express": "^4.18.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "node-cron": "^3.0.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.0",
    "moment": "^2.29.0",
    "ajv": "^8.12.0",
    "jsonschema": "^1.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "@types/node-cron": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syncbelle/marlie.git",
    "directory": "src/modules/marlie-quality"
  },
  "bugs": {
    "url": "https://github.com/syncbelle/marlie/issues"
  },
  "homepage": "https://github.com/syncbelle/marlie#readme",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}