# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Evolution API Configuration
EVOLUTION_BASE_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_INSTANCE=your_instance_name
WEBHOOK_URL=https://your-app.railway.app/webhooks/evolution

# Trinks Integration
TRINKS_BASE_URL=https://api.trinks.com
TRINKS_API_KEY=your_trinks_api_key
TRINKS_ESTABELECIMENTO_ID=your_establishment_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Application
PORT=3000
NODE_ENV=production

# Security
JWT_SECRET=your_secure_jwt_secret_here
ADMIN_USER=admin
ADMIN_PASS=your_secure_admin_password

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_SSL=true

# Redis (Optional - for caching)
# REDIS_URL=redis://user:password@host:port

# Pinecone (for RAG functionality)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=your_pinecone_index_name

# Logging
LOG_LEVEL=info